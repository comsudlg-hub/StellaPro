{
  "firestore": {
    "rules": "backend/db/firestore.rules",
    "indexes": "backend/db/firestore.indexes.json"
  },
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs18", "codebase": "default", "region": "southamerica-east1",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}


